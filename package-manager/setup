#!/usr/bin/env bash

source utility/command.sh
source utility/logging.sh

logging_setup 'brew'

if is_command_not_in_path brew; then
	printf 'Installing brew...'
	/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

brew update

xargs brew install <package-manager/formulas.txt
xargs brew cask install <package-manager/casks.txt

brew doctor

printf 'y\ny\nn\n' | "$(brew --prefix)"/opt/fzf/install
