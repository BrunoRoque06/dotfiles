#!/usr/bin/env bash

source utility/command.sh

xargs sudo pacman -S --needed <package-manager/packages.txt
sudo pacman -S --needed alacritty code python-pip ttf-ibm-plex xclip

if is_command_not_in_path yay; then
	git clone --depth 1 https://aur.archlinux.org/yay.git
	(
		cd yay/ || exit
		makepkg -si
	)
	rm -rf yay/
fi

yay -S --needed gotop lazygit starship ttf-input
