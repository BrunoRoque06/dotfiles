#!/usr/bin/env bash

source utilities/os
source utilities/shell

printf 'Starting dotfiles installation...\n'

if is_mac_os; then
  cp /Applications/Utilities/Terminal.app/Contents/Resources/Fonts/*.otf "$HOME"/Library/Fonts/
  printf 'Installing brew packages/casks...\n'
  prompt_for_command ./package-managers/brew
elif is_arch; then
  printf 'Installing pacman packages...\n'
  prompt_for_command ./package-managers/pacman
fi

./alacritty/setup
./intellij/setup
./vscode/setup

./fish/setup
./zsh/setup
./vim/setup
./git/setup
./tmux/setup
./fzf/setup

printf 'Installation has finished #\n'

exec zsh
