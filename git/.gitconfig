[alias]
	a = add
	aa = add --a
	b = branch
	bd = branch -d
	cfl = config --list --show-origin
	ci = commit
	ciam = commit -am
	ciamend = commit --amend
	cim = commit -m
	co = checkout
	cob = checkout -b
	cp = cherry-pick
	d = diff
	dt = difftool
	f = fetch
	l = log
	la = log --all --decorate --graph --oneline -20
	last = log -1 -p
	pack = gc
	ph = push
	pl = pull
	plrb = pull --rebase
	rb = rebase
	rsh = reset --hard HEAD
	s = status --untracked-files
	unstage = reset HEAD --

[core]
	editor = vim
	pager = delta
	excludesfile = ~/.gitignore_global

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

