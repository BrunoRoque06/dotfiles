set commentary
set highlightedyank
set NERDTree
set surround

source ~/.config/nvim/init.vim

nnoremap <leader>` :action ActivateTerminalToolWindow<cr>
nnoremap <leader>b :action RecentChangedFiles<cr>
nnoremap <leader>c :action SearchEverywhere<cr>
nnoremap <leader>db :action ToggleLineBreakpoint<cr>
nnoremap <leader>dr :action Debug<cr>
nnoremap <leader>ds :action Stop<cr>
nnoremap <leader>f :action SearchEverywhere<cr>
nnoremap <leader>g :action FindInPath<cr>
nnoremap <leader>m :action ShowBookmarks<cr>
nnoremap <leader>n :action NewElementSamePlace<cr>
nnoremap <leader>r :action Run<cr>
nnoremap <leader>t :action RerunTests<cr>
nnoremap <leader>x :NERDTree<cr>
nnoremap <leader>z :action ToggleDistractionFreeMode<cr>

nnoremap [<space> O<esc>j
nnoremap ]<space> o<esc>k
nnoremap [b :action PreviousTab<cr>
nnoremap ]b :action NextTab<cr>
nnoremap [d :action GotoPreviousError<cr>
nnoremap ]d :action GotoNextError<cr>
nnoremap [e dd<esc>P
nnoremap ]e dd<esc>p

nnoremap ga :action ShowIntentionActions<cr>
nnoremap gd :action GotoDeclaration<cr>
nnoremap gh :action ShowErrorDescription<cr>
nnoremap gi :action GotoImplementation<cr>
nnoremap gr :action Refactorings.QuickListPopupAction<cr>
nnoremap gt :action FileStructurePopup<cr>
nnoremap gu :action FindUsages<cr>

nnoremap == :action ReformatCode<cr>

inoremap <f1> :action ParameterInfo<cr>
