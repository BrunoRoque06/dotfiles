#!/usr/bin/env bash

source utility/dotfile.sh
source utility/logging.sh

logging_setup 'fish'

link config.fish "$HOME"/.config/fish
link abbreviations.fish "$HOME"/.config/fish

FUNCS=$(ls fish/functions)

for F in $FUNCS; do
	link functions/"$F" "$HOME"/.config/fish/functions
done

curl https://git.io/fisher --create-dirs -sLo ~/.config/fish/functions/fisher.fish
link fishfile "$HOME"/.config/fish
fish -c fisher
