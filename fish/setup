#!/usr/bin/env bash

source utility/file.sh
source utility/logging.sh

logging_setup 'fish'

symlink_to_dir config.fish "$HOME"/.config/fish
symlink_to_dir abbreviations.fish "$HOME"/.config/fish

symlink_to_dir functions/open_url.fish "$HOME"/.config/fish/functions
symlink_to_dir functions/up.fish "$HOME"/.config/fish/functions
symlink_to_dir functions/weather.fish "$HOME"/.config/fish/functions
symlink_to_dir functions/fish_user_key_bindings.fish "$HOME"/.config/fish/functions

curl https://git.io/fisher --create-dirs -sLo ~/.config/fish/functions/fisher.fish
symlink_to_dir fishfile "$HOME"/.config/fish
fish -c fisher
