#!/usr/bin/env bash

set -e

SESSION='dot'

tmux new-session -d -s $SESSION

tmux rename-window -t 1 'dotfiles'
tmux send-keys "cd $HOME/Projects/dotfiles" C-m

tmux new-window -t $SESSION:2 -n 'website'
tmux send-keys "cd $HOME/Projects/brunoroque06.github.io" C-m

tmux new-window -t $SESSION:3 -n 'lambda'
tmux send-keys "cd $HOME/Projects/lambda" C-m

tmux new-window -t $SESSION:4 -n 'care'
tmux send-keys "cd $HOME/Projects/care" C-m

tmux attach-session -t $SESSION
