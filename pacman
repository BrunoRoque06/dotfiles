#!/usr/bin/env bash

source utils

sudo pacman -S bat diff-so-fancy git go-pie gradle htop nodejs npm shellcheck shfmt python tmux vim wget xclip zsh

if does_command_not_exist yay; then
  git clone https://aur.archlinux.org/yay.git
  (
    cd yay/ || exit
    makepkg -si
  )
  rm -rf yay/
fi

yay -S antibody google-chrome lazygit otf-sfmono visual-studio-code-bin
