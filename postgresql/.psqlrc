\set PROMPT1 '%/ %n (%M) %x\n%# '
\set PROMPT2 ''

\pset border 4
\pset format wrapped
\pset linestyle unicode
\set COMP_KEYWORD_CASE lower
\set ON_ERROR_STOP on
\set VERBOSITY verbose
\timing on
\x auto

\set ext 'select * from pg_available_extensions;'
\set l 'select pid, usename as username, datname as database_name, query, application_name, backend_start, state, state_change from pg_stat_activity where query not like \'<insufficient privilege>\';'
\set v 'select version();'

