\set PROMPT1 '%[%033[34m%]%n %[%033[0m%]@ %[%033[35m%]%/ %[%033[36m%]%M %[%033[0m%]%x\n%# '
\set PROMPT2 '+ '

\pset border 4
\pset format wrapped
\pset linestyle unicode
\pset null '(null)'
\set COMP_KEYWORD_CASE lower
\set ON_ERROR_STOP on
\set VERBOSITY verbose
\timing on
\x auto

\set ext 'select * from pg_available_extensions order by name;'
\set l 'select pid, datname, usename, client_addr, state, query_start, state_change, query from pg_stat_activity where query not like \'<insufficient privilege>\' order by state_change desc;'
\set tsa 'select * from timescaledb_information.continuous_aggregates;'
\set tsas 'select * from timescaledb_information.continuous_aggregate_stats;'
\set v 'select version();'
